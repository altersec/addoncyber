{
  "manifest_version": 3,
  "name": "AddonCyber",
  "version": "0.1",
  "description": "Search IPs, Domains, URLs, hashes or encoded text and IOCs on various services",
  "author": "alterSec Ltd",
  "homepage_url": "https://github.com/altersec/addoncyber",
  "icons": {
    "16": "icons/search16.png",
    "32": "icons/search32.png",
    "48": "icons/search48.png",
    "128": "icons/search128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab", 
    "contextMenus"],
  "host_permissions": [
    "https://altersec.com/",
    "https://talosintelligence.com/",
    "https://otx.alienvault.com/",
    "https://www.shodan.io/",
    "https://*.microsoft.com/",
    "https://cve.circl.lu/",
    "https://gchq.github.io/",
    "https://twitter.com/"
  ]
}
